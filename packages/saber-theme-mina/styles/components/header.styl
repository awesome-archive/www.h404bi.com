.site-header
  align-items: center
  background-color: #fafafa
  box-shadow: 0 0 2px rgba(0, 0, 0, .15)
  display: flex
  justify-content: center
  padding: $gap-m 0

  .columns
    padding 0 $gap-m
    width 100%
    max-width $breakpoint-max
  // Site Navigation
  .topbar-nav-wrap
    text-align right
  .topbar-nav
    ul
      list-style: none
      margin-bottom: 0
      padding-left: 0

      li
        display: inline-block

        &+li
          margin-left: $gap-m
