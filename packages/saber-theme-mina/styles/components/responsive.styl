/* 480px ~ 960px */
@media (min-width: $breakpoint-mid)
  html
    font-size: $font-size-base-m

  .site-header .columns
    padding 0 $gap-l

  .mina-wrapper
    margin-top: 58px
    padding: $gap-l $gap-l 0

  .post-list .post-card-wrap.column
    padding $gap-m

  //* post.styl
  .post-content
    // figure tag images
    figure
      &.left,
      &.right
        max-width: 40%
      &.left
        float: left
        margin-right: $gap-l
      &.right
        float: right
        margin-left: $gap-l

/* > 960px */
@media (min-width: $breakpoint-max)
  html
    font-size: $font-size-base-l

  .site-header .columns
    padding 0 $gap-l

  .mina-wrapper
    margin-top: 65px
    padding: $gap-l $gap-m 0

  .pagination
    padding 0 $gap-m

  //* post.styl
  .post-content
    // figure tag images
    figure
      &.left,
      &.right
        max-width: 50%

      &.left
        margin-left: -25%

      &.right
        margin-right: -25%

  //* footer.styl
  .site-footer
    padding $gap-l 0
