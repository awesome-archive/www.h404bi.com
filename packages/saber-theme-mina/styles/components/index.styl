// Index list
.post-list
  display flex
  flex-wrap wrap
  padding: 0

  .post-card-wrap.column
    padding $gap-s

  .post-card-wrap
    display: flex
  .post-card
    width: 100%
    background #fefefe
    .post-card__image
      max-height: 600px
      width: 100%
      background-color: #ecf0f1
      background-position: 50%
      background-repeat: no-repeat
      background-size: cover
      &:before
        content: ""
        display: block
        width: 100%
    .post-card__info
      padding $gap-s
      word-break: break-all
      text-align: justify
      .post-title
        font-size: $font-size-h6

  .post-list-item
    list-style: none

    .post-title
      display: block
      margin: 0

    .post-meta
      color: $meta-color
      display: block
      font-size $font-size-small
      font-style: italic

// Index pagination
.pagination
  .prev-wrap
    display: flex
    justify-content: flex-start
  .next-wrap
    display: flex
    justify-content flex-end
  a
    display: flex
    align-items: center
    .icon
      padding-top 2px
    .text
      margin 0 $gap-s
