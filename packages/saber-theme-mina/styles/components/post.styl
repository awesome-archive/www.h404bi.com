.post-content
  margin: 0 auto
  max-width: $post-wrap-width
  .post-header
    margin-bottom: $gap-m
    text-align: center

    h1
      margin-bottom: 0

    .post-meta
      color: $meta-color

  .post-body
    margin-bottom: $gap-xl

    p a
      border-bottom: 1px dashed $meta-color
      overflow-wrap: break-word
      word-break: break-all

    h1, h2, h3,
    h4, h5, h6
      &:hover
        .header-anchor
          visibility: visible

    .header-anchor
      margin-left: $gap-m * -1.4333
      visibility: hidden

    > p
      text-align: justify

    > table
      border-collapse: collapse
      border-spacing: 0
      display: block
      overflow: auto
      width: 100%

      tr
        // border-top 1px solid #c6cbd1
        &:nth-child(2n)
          background-color: $tertiary-color

        th, td
          border: 1px solid #dfe2e5
          padding: $gap-s $gap-m
          white-space: nowrap

    blockquote
      border-left: 2px solid $highlight-color
      font-style: italic
      padding-left: $gap-m
      overflow-wrap: break-word
      word-break: break-all
      p:last-child
        margin: 0

    ol, ul
      margin-bottom: $gap-m
      padding-left: $gap-m * 1.5 // fix list-style overflow

      p
        margin-bottom: 0

    ul
      list-style-type: square

    li
      ul, ol
        margin-bottom: 0

    // common code blocks
    pre, code
      font-family: $font-family-mono
      font-size: $font-size-code

    pre
      line-height: $line-height-code

    code
      background: $tertiary-color
      padding: $gap-s * 0.25 $gap-s * 0.5 // really small gap

    // syntax highlighting code blocks
    .saber-highlight
      margin: 0
      margin-bottom: $gap-m
      overflow: hidden
      background: $tertiary-color
      border-radius: 0
      box-shadow: none

      &:before
        content: attr(data-lang)
        position: absolute
        right: $gap-s
        top: $gap-s * 0.5 // really small gap
        font-size: $font-size-sub-sup
        color: $meta-color

      pre
        padding: $gap-m !important
        overflow: auto

      code
        background: none
        padding: 0

    s, del, .meta
      color: $meta-color

    hr
      border: 0
      border-bottom: 2px solid $meta-color
      margin: 0 auto $gap-l
      opacity: .5
      padding-top: $gap-m
      width: 6rem

      &.footnotes-sep
        margin-top: $gap-m

    sub, sup
      font-size: $font-size-sub-sup

      a
        color: $highlight-color

    // all type of images shouldn't overflow
    img
      max-width: 100%

    // normal Markdown images
    p
      img
        display: block
        margin: 0 auto

    // add margin-bottom for images without p tag warp (html tag images)
    & > img
      margin-bottom: $gap-m

    figure
      text-align: center

      figcaption
        color: $meta-color
        font-size: $font-size-small
        text-align: center

        p
          margin: 0

      // blockquote inside figure should align left
      blockquote
        text-align: left

    figure.highlight
      text-align: left

    // footnotes
    .footnotes
      color: $meta-color
      font-size: $font-size-footnotes

      p
        margin-bottom: $gap-m

        a
          border: 0

          &.footnote-backref
            text-decoration: underline

  // content comments
  .post-comments
    margin-bottom: $gap-l

    #load-disqus
      color: $meta-color
      text-align: center
